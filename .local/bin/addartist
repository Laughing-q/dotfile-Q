#!/bin/sh


# name-artist.mp3
count=1
for i; do
	pname="$(echo $i | cut -d '/' -f2)"
	newpath="./newJacky/$pname"
  name="${pname%.*}"
  song="${name%-*}"
  artist="${name#*-}"
  # name="${pname%-*}"
	# echo $song
	# echo $artist
	echo "($count/${#*})--$newpath"
	count=$((count + 1))
	ffmpeg -i "$i" -metadata artist="$artist" -metadata title="$song" "$newpath" &>/dev/null
	# ffmpeg -i "$i" -metadata artist="Jacky Cheung" -metadata title="$name" "$newpath" &>/dev/null
done
