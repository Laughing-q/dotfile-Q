#!/bin/sh

while true; do
	sleep $1
	time=$(date "+%k")
	if [[ $time -gt 7 && $time -lt 17 ]]; then
		# echo $time
		wp-change "/home/laughing/Pictures/day"
	elif [[ $time -gt 17 && $time -lt 19 ]]; then
		# echo $time
		wp-change "/home/laughing/Pictures/nightfall"
	else
		# echo $time
		wp-change "/home/laughing/Pictures/night"
	fi
done
